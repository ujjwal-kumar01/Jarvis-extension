{
  "manifest_version": 3,
  "name": "Jarvis AI Assistant",
  "version": "1.0",
  "description": "An AI-powered Chrome Assistant that can perform tasks like opening sites, downloading files, and automating actions.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "storage",
    "history"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Jarvis Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png"
  },
  "host_permissions": ["<all_urls>"]
}
